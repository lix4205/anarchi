# This function search in pacman database to see if there is a package nammed *-$LALANGUE
echo_tab() {
	local SOFT=$( echo $1 | sed "s/-.*//" )
	local LANGUAGE_2=$2
	local lang="$( echo $2 | sed "s/.*_//" | sed "s/.*-//" )"
	echo "[${lang,,}_$SOFT]=\"$2\""
	
}

# this fonction return the package traduction 
trans_packages() {
	local SOFT=$( echo $1 | sed "s/-.*//" )
	local LOCALISATION=$2
	[ -z $LOCALISATION ] && LANGUAGE_2="us" || LANGUAGE_2="$( echo "${LOCALISATION,,}" | sed "s/.*_\(.*\)\..*/\1/" )"
	case $LANGUAGE_2 in 
		fr|de|it) echo -en $1-$LANGUAGE_2;;
	
		*)
			if [ ! -z ${soft_trans[$LANGUAGE_2$(echo -ne "_")$SOFT]} ]; then
				LANGUAGE_2="${soft_trans[$LANGUAGE_2$(echo -ne "_")$SOFT]}"
				echo -ne $1-$LANGUAGE_2
			else
# 				show_pacman_for_lang "$1" "$LANGUAGE_2" >&2
				caution "31" "33" "%s" "Les paquets de langues de $1 n'ont pas pu etre identifié !" 
			fi
		;;
	esac
	
}

show_pacman_for_lang() {
	i=1;
	local SOFT=$1
	pacman -Ss "$1" | while read -r ;do 
		[ $((i%2)) -eq 1 ] && _langages[$i]="$( echo $REPLY | sed "s/.*$SOFT-\(.*\) .*/\1/")"
		[ $((i%2)) -eq 1 ] && _langages[$((i+1))]="$( echo $REPLY | sed "s/.*\/\(.*\) .*/\1/" )"
		[ $((i%2)) -eq 0 ] && _langages[$i]+="$REPLY"
		[ $((i%2)) -eq 0 ] && echo  "$( echo_tab "$( echo "$SOFT" | sed "s/-.*//" )" "$( echo ${_langages[$((i-1))]} | sed "s/$SOFT-//" )"  ) : ${_langages[$i]}"
		i=$((i+1))
	done
}
	
